        "electron": "^12.0.1",
        "electron-reload": "^1.5.0",
        "react": "^17.0.1",
        "react-bootstrap": "^1.5.2",
        "react-d3-graph": "^2.6.0",
        "react-d3-tree": "^2.0.1",
        "react-dom": "^17.0.1",
        "watchify": "^4.0.0"
    },
    "babel": {
        "presets": [
            "@babel/env",
            "@babel/react"
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties"
        ]
    },
    "browserify-css": {
        "autoInject": true,
        "minify": true,
        "rootDir": "."
    },
    "devDependencies": {
        "@babel/core": "^7.13.10",
        "@babel/preset-env": "^7.13.10",
        "@babel/preset-react": "^7.12.13",
        "babel-loader": "^8.2.2",
